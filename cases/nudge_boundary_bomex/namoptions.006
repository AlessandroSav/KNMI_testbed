!
! Modified BOMEX case, with boundary nudging
! Like 004, but with perturbations in block sizes of 10
!

&RUN
iexpnr     = 006
lwarmstart = .false.
startfile  = 'initd001h00mx000y000.001'
runtime    = 43200
trestart   = 10800
ladaptive  = .true.
irandom    = 1
randthl    = 0.1
randqt     = 2.5e-5
nsv        = 0
nprocx     = 12
nprocy     = 12
/

&DOMAIN
itot       = 1200
jtot       = 240
kmax       = 75
xsize      = 60000.
ysize      = 12000.
/

&PHYSICS
z0         = 2e-4
ps         = 101500.00
thls       = 299.10
lmoist     = .true.
lcoriol    = .false.
igrw_damp  = 3       ! 3 = nudge (damping) to mean profile
/

&NAMSURFACE
wtsurf     = 8e-3
wqsurf     = 5.2e-5
isurf      = 3
ustin      = 0.28
/

&DYNAMICS
llsadv     = .false.
lqlnr      = .false.
cu         = 0.
cv         = 0.

iadv_mom   =  52
iadv_tke   =  52
iadv_thl   =  52
iadv_qt    =  52
iadv_sv    =  52
/

&NAMSUBGRID
ldelta     = .false.
/

&NAMBUDGET
lbudget    = .false.
dtav       = 60.
timeav     = 60.
/

&NAMCHECKSIM
tcheck     = 60
/

&NAMSAMPLING
dtav       = 60.
timeav     = 60.
lsampcl    = .false.
lsampco    = .false.
lsampup    = .false.
lsampbuup  = .false.
/

&NAMTIMESTAT
ltimestat   = .true.
dtav        = 60
/

&NAMCROSSSECTION
lcross      = .true.
dtav        = 60
crossheight = 2 7 17 20
/

&NAMGENSTAT
lstat       = .true.
dtav        = 60
timeav      = 60
/

&NAMFIELDDUMP
lfielddump  = .false.
dtav        = 60
ldiracc     = .true.
/

&NAMSTATTEND
dtav = 60
ltend = .false.
/

&NAMNUDGE
lnudge = .true.
tnudgefac = 10800
/

&NAMNUDGEBOUNDARY
lnudge_boundary = .true.
nudge_offset = 500
nudge_width = 125
tau = 10
nudge_mode = 2

lperturb_boundary = .false.
perturb_offset = 1000
perturb_width = 125
perturb_ampl = 0.1
blocksize = 10
zmax_perturb = 600      ! 600 m ~ cloudbase

lrecycle=.true.
recycle_source=80    ! 50x50 = 2500 m
recycle_target=20    ! 20x50 = 1000 m
recycle_width=10     ! 10*50 = 500 m
tau_recycle=60
zmax_recycle=600
/
